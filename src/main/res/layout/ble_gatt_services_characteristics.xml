<LinearLayout android:id="@+id/tvLinearLayout"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#FFFFFFFF">
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		<Button
				android:id="@+id/mt_deviceSend"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="获得设备信息"
				android:background="@drawable/buttonblue"
				android:layout_marginTop="5dp"
				android:layout_marginLeft="5dp"
				android:textColor="@drawable/buttonfont"
				android:minWidth="100dp"
		/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		<Button
				android:id="@+id/mt_shengyinkai"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="声音开"
				android:background="@drawable/buttonblue"
				android:layout_marginTop="5dp"
				android:layout_marginLeft="5dp"
				android:textColor="@drawable/buttonfont"
				android:minWidth="100dp"

		/><Button
					android:id="@+id/mt_shengyinguan"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="声音关"
					android:background="@drawable/buttonblue"
					android:layout_marginTop="5dp"
					android:layout_marginLeft="5dp"
					android:textColor="@drawable/buttonfont"
					android:minWidth="100dp"
			/>
			<Button
					android:id="@+id/mt_gaikai"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="翻盖"
					android:background="@drawable/buttonblue"
					android:layout_marginTop="5dp"
					android:layout_marginLeft="5dp"
					android:textColor="@drawable/buttonfont"
					android:minWidth="100dp"
			/><Button
				android:id="@+id/mt_gaiguan"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="关盖"
				android:background="@drawable/buttonblue"
				android:layout_marginTop="5dp"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:textColor="@drawable/buttonfont"
				android:minWidth="100dp"
		/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
		<Button
				android:id="@+id/deviceControl1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="启动检测"
				android:textSize="15sp"
				android:background="@drawable/buttonblue"
				android:layout_marginTop="5dp"
				android:layout_marginLeft="5dp"
				android:textColor="@drawable/buttonfont"
				android:minWidth="100dp"
		/>
			<Button
					android:id="@+id/deviceControl2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="退出检测"
					android:textSize="15sp"
					android:background="@drawable/buttonblue"
					android:layout_marginTop="5dp"
					android:layout_marginLeft="5dp"
					android:textColor="@drawable/buttonfont"
					android:minWidth="100dp"
			/>
			<Button
					android:id="@+id/deviceControl3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="清洗"
					android:textSize="15sp"
					android:background="@drawable/buttonblue"
					android:layout_marginTop="5dp"
					android:layout_marginLeft="5dp"
					android:textColor="@drawable/buttonfont"
					android:minWidth="100dp"
			/>
			<Button
					android:id="@+id/deviceControl4"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="复位"
					android:textSize="15sp"
					android:background="@drawable/buttonblue"
					android:layout_marginTop="5dp"
					android:layout_marginLeft="5dp"
					android:layout_marginRight="5dp"
					android:textColor="@drawable/buttonfont"
					android:minWidth="100dp"
			/>
		</LinearLayout>

	<ScrollView android:id="@+id/svResult"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_weight="1.0"
				android:background="#FFFFFFFF">

        <TextView
            android:focusable="true"
			android:focusableInTouchMode="true"
            android:id="@+id/data_value"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/no_data"
            android:textSize="16sp"/>


	</ScrollView>
	<ScrollView android:id="@+id/svResult2"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_weight="1.0"
				android:background="#FFFFFFFF">
		<TextView
				android:focusable="true"
				android:focusableInTouchMode="true"
				android:singleLine="false"
				android:id="@+id/http_result"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:text="@string/no_data"
				android:textSize="16sp"/>
	</ScrollView>

    <TableLayout android:id="@+id/TableLayout02"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="0px"
		android:stretchColumns="0"
		android:layout_gravity="bottom">
		<TableRow>

			<EditText
    			android:id="@+id/edtSend"
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:layout_span="4"/>
<!--			<Button android:id="@+id/btnSend"-->
<!--				android:layout_height="wrap_content"-->
<!--				android:layout_width="wrap_content"-->
<!--				android:text="@string/send"-->
<!--				android:layout_gravity="bottom">-->
<!--			</Button>-->
		</TableRow>
	</TableLayout>
</LinearLayout>